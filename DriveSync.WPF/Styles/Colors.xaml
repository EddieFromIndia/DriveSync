<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:properties="clr-namespace:DriveSync.Properties">
    
    <!--#region Light Mode-->
    <Color x:Key="PrimaryColor">#FF46624B</Color>
    <SolidColorBrush x:Key="PrimaryThemeBrush" Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="LightButtonBrush" Color="#FFF6F6F6" />
    <SolidColorBrush x:Key="WhiteBrush" Color="White" />
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#FF444644" />
    <SolidColorBrush x:Key="TabMouseOverBrush" Color="#FF2E322F" />
    <SolidColorBrush x:Key="HeaderButtonMouseOverBrush" Color="#FF4E6D53" />
    <SolidColorBrush x:Key="HeaderButtonPressedBrush" Color="#FF5A7E60" />

    <SolidColorBrush x:Key="UserAreaBrush" Color="#FF7D7D7D" />
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFF8F8F8" />
    <SolidColorBrush x:Key="SidebarBrush" Color="#FF181918" />
    <SolidColorBrush x:Key="MainLightBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="MainWindowBorderBrush" Color="#FFE3E3E3" />
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FFEEEEEE" />

    <SolidColorBrush x:Key="LightSectionBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="MainButtonBrush" Color="#FF005FB8" />

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="Black" />
    <SolidColorBrush x:Key="ButtonTextBrush" Color="White" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FF666666" />
    <!--#endRegion-->

    <!--#region Dark Mode-->
    <Color x:Key="PrimaryDarkColor">#FF262626</Color>
    <SolidColorBrush x:Key="PrimaryThemeBrushDark" Color="{DynamicResource PrimaryDarkColor}" />
</ResourceDictionary>